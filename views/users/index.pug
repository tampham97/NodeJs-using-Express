extends ../layouts/common.pug
block content
    h1 
        span.mr-3 User
        a.btn.btn-primary.mb-3(href="/users/create") New
    .d-flex.align-items-center
        form.ml-auto(action="users/search", method="GET" class="d-flex")
            input(type="text" name= "q" class="form-control mr-2")
            button.btn.btn-primary Search
    table.table
        tr  
            td Name
            td Phone
            td Action
        each user in users
            tr
                td= user.name
                td= user.phone
                td
                    a.btn.btn-light(href="/users/" +user.id) View 
                
        